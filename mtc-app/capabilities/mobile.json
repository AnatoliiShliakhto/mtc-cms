{
  "$schema": "../gen/schemas/mobile-schema.json",
  "identifier": "mobile-capability",
  "description": "Mobile app permissions",
  "windows": ["*"],
  "remote": {
    "urls": ["https://242.org.ua", "https://localhost"]
  },
  "permissions": [
    "core:default",
    "store:default",
    "dialog:default",
    "dialog:allow-open",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    "http:default",
    "fs:default",
    "barcode-scanner:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$DOWNLOAD" }, { "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "$DOWNLOAD" }, { "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [{ "path": "$DOWNLOAD" }, { "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-download-read-recursive",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-download-write-recursive",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-download-meta-recursive",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:scope-download-recursive",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:scope-download-index",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    }
  ],
  "platforms": [
    "android",
    "iOS"
  ]
}