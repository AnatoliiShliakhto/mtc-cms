{
  "$schema": "../gen/schemas/mobile-schema.json",
  "identifier": "mobile-capability",
  "description": "Mobile app permissions",
  "windows": ["*"],
  "remote": {
    "urls": ["https://242.org.ua", "https://localhost"]
  },
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    "http:default",
    "barcode-scanner:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:read-meta",
    "view:allow-view",
    "keep-screen-on:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**" }]
    }
  ],
  "platforms": [
    "android",
    "iOS"
  ]
}