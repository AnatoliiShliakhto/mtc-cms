{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop",
  "description": "Desktop app permissions",
  "windows": ["*"],
  "remote": {
    "urls": ["https://242.org.ua", "https://242.mil.gov.ua", "https://localhost"]
  },
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    "http:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:read-meta",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**" }]
    }
  ],
  "platforms": [
    "windows",
    "linux"
  ]
}